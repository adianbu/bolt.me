{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appName": {
      "value": "bolt-me"
    },
    "location": {
      "value": "East US"
    },
    "environment": {
      "value": "prod"
    },
    "costOptimizationLevel": {
      "value": "balanced",
      "metadata": {
        "description": "Options: minimal (~$15/mo), balanced (~$25/mo), performance (~$40/mo)"
      }
    },
    "enableAutoShutdown": {
      "value": false,
      "metadata": {
        "description": "Set to true for development environments to save costs"
      }
    },
    "anthropicApiKey": {
      "value": "YOUR_ANTHROPIC_API_KEY_HERE"
    },
    "geminiApiKey": {
      "value": "YOUR_GEMINI_API_KEY_HERE"
    },
    "dockerRegistryUrl": {
      "value": "ghcr.io",
      "metadata": {
        "description": "Default: GitHub Container Registry (ghcr.io)"
      }
    },
    "dockerRegistryUsername": {
      "value": "adianbu",
      "metadata": {
        "description": "GitHub username for container registry access"
      }
    },
    "dockerRegistryPassword": {
      "value": "YOUR_GITHUB_TOKEN_HERE",
      "metadata": {
        "description": "Required: GitHub Personal Access Token with packages:read scope"
      }
    },
    "frontendImageTag": {
      "value": "latest"
    },
    "backendImageTag": {
      "value": "latest"
    }
  }
}