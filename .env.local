# Local Development Environment
# Use: docker-compose --env-file .env.local up

# Registry settings (local build)
REGISTRY_NAME=localhost
IMAGE_TAG=latest

# Port mappings
FRONTEND_PORT=8080
BACKEND_PORT=3000

# Environment
NODE_ENV=development
VITE_API_URL=http://localhost:3000

# Docker settings
RESTART_POLICY=unless-stopped
LOG_MAX_SIZE=10m
LOG_MAX_FILE=3

# Volume paths
ENV_FILE_PATH=./backend/.env

# API Keys (set your actual keys)
# ANTHROPIC_API_KEY=your_key_here
# GEMINI_API_KEY=your_key_here