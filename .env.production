# Production Environment for Azure
# Use: docker-compose --env-file .env.production up

# Registry settings (GitHub Container Registry)
REGISTRY_NAME=ghcr.io/adianbu
IMAGE_TAG=latest

# Port mappings (Azure will handle external routing)
FRONTEND_PORT=80
BACKEND_PORT=3000

# Environment
NODE_ENV=production
VITE_API_URL=http://backend:3000

# Docker settings
RESTART_POLICY=unless-stopped
LOG_MAX_SIZE=50m
LOG_MAX_FILE=5

# Volume paths (production won't mount local files)
ENV_FILE_PATH=/dev/null

# API Keys (set in Azure environment or secrets)
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
GEMINI_API_KEY=${GEMINI_API_KEY}